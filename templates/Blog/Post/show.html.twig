{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <br>
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">{{ post.title }}</h2>
                        <p class="card-text"><strong>Description:</strong> {{ post.description }}</p>
                        <p class="card-text"><strong>Author:</strong> {{ post.author }}</p>
                        <p class="card-text"><strong>Date:</strong> {{ post.date|date('d.n.Y H:i:s') }}</p>
                    </div>
                </div>

                <hr>

                <h3 class="mb-4"><strong>Comments</strong></h3>
                <div class="list-group">
                    {% for comment in post.comments %}
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">{{ comment.author }}</h5>
                                <small>{{ comment.date|date('d.n.Y H:i:s') }}</small>
                            </div>
                            <p class="mb-1">{{ comment.content }}</p>
                        </div>
                    {% endfor %}
                </div>

                <hr>

                <h5 class="mb-4">Add a Comment</h5>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Your comment'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.author, {'attr': {'class': 'form-control', 'placeholder': 'Your name'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Add comment</button>
                {{ form_end(form) }}
            </div>

            <div class="col-md-2">
                <br>
                <div class="text-md-right">
                    <a href="{{ path('home') }}" class="btn btn-secondary btn-lg">Back</a>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}